    GBIBSQL.SQL.Text:= 'SELECT SBCODE, SBPHONE, SBMESSAGE, SBURGENCY, SBSTATE, SBERROR '#10
                     + 'FROM SMSBOX '#10
                     + 'where SBCAMPID is null and (SBERROR is null or SBERROR="")';
    GBIBSQL.Prepare; 
    GBIBSQL.ExecQuery;
prMessageLOGS(nmProc+' GBIBSQL.ExecQuery ','error' , false);
    try
